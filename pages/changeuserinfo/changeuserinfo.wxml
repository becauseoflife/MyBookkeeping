            <!-- 修改昵称 -->
            <view class="weui-cells__title">修改昵称</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell ">
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="netName" value="{{netName}}" placeholder="请输入新昵称" />
