                <view class="weui-cell ">
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="telephone" value="{{telephone}}" type="number" placeholder="请输入新手机号码" />
                    </view>
                </view>
            </view>

            <!--完成按钮-->
            <view class="page__bd page__bd_spacing">
