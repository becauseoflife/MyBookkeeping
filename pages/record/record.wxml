<!--pages/record/record.wxml-->
<view class="page">
    <view class="page__hd">
        <block wx:for="{{list}}" wx:for-item="records" wx:for-index="index">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
                        <image src="/image/date.png" style="width: 50px; height: 50px; display: block"/>
                    </view>
                    <view class="weui-cell__bd">
                        <view class="type-text">{{records.type}}</view>
                        <view style="font-size: 13px;color: #888888;">{{records.date}}</view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__ft">-{{records.cost}}</view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>
