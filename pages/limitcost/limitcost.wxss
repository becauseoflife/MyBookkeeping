/* pages/limit/limit.wxss */
page{
  background-color:#EDEDED; 
}

/*显示文字*/
.page__hd{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  flex-wrap:wrap;
  margin-top: 10%;
  background: #ffffff;
}

.week_view, .month_view{
  display: flex;
  flex-direction: row;
  justify-content: first-start;
  align-items: center;
  margin: 20rpx 40rpx;
  
}
/* 大文字*/
.week_text, .month_text{
  font-weight: normal;
  font-size: 50rpx;
}

/* 小文字 */
.mini_text {
  font-size: 30rpx;
  color: #888888;
  margin-bottom: 15rpx;
  margin-right: 20rpx;

}

/* 花费的文字 */
.week_cost{
  color:blue;
} 
.month_cost{
  color: red;
}

/*提交按钮*/
.btn-view{
  margin-top:20%; 
}