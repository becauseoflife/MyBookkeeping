/* pages/login/login.wxss */
.container{
  height: 100%;
  display:flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  justify-content: center;
  align-content: center;
  align-items: center;
}

/*登录文字*/
.login-header{
  margin-top: 25%;
}

.login-text{
  font-weight: bold;
  font-size: larger;
}

/*表单内容*/
.login-form{
  margin-top: 30px;
  flex: auto;
  height: 100%
}

/*输入框*/
.user-no{
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  display: flex;
}

.user-pwd{
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 30rpx;
  display: flex;
}

.no-input-img, .pwd-input-img{
  width: 14px;
  height: 14px;
  margin-right:10px 
}

/*登录按钮*/
.login-btn{
  height: 80rpx;
  margin-top: 35px;
}

/*注册文字*/
.register-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.register-nav{
  font-size: smaller;
  color: #808080;
}