page{
  background-color:#EDEDED; 
}

.page{
  height: 100%;
  width: 100%;
}

/*头像区域*/
.page__hd{
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/*退出登录 */
.out-login{
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: red;
}