<!--pages/changepwd/changepwd.wxml-->
<view class="page">
    <view class="page_bd">
        <form bindsubmit="changeSubmit">
            <view class="weui-cells weui-cells_after-title">
                <!-- 原密码 -->
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">原密码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="oldPwd" placeholder="请输入原密码"/>
                    </view>
                </view>
                <!-- 新密码 -->
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">新密码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="newPwd" placeholder="请输入新密码"/>
                    </view>
                </view>
                <!-- 确认新密码 -->
                <view class="weui-cell ">
                    <view class="weui-cell__hd">
                        <view class="weui-label">确认新密码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" name="okPwd" placeholder="请确认新密码"/>
                    </view>
                </view>
            </view>

            <!--完成按钮-->
            <view class="page__bd page__bd_spacing">
                <button class="weui-btn" type="primary" form-type="submit">修     改</button>
            </view>
        </form>
    </view>
</view>
